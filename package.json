 {
  "name": "github-actions-workflow-ts-monorepo",
  "private": true,
  "description": "Generate GitHub Actions workflow files using TypeScript",
  "repository": "https://github.com/emmanuelnk/github-actions-workflow-ts",
  "author": "Emmanuel N Kyeyune",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm exec eslint packages --fix && pnpm exec prettier --config .prettierrc.json --write \"packages/**/*.{ts,tsx}\"",
    "clean": "pnpm -r clean",
    "generate-workflow-files": "node --import tsx packages/cli/dist/bin.js",
    "gwf": "node --import tsx packages/cli/dist/bin.js",
    "generate-workflow-types": "pnpm exec tsx scripts/generateWorkflowTypes.ts && pnpm lint",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^15.5.0",
    "node-fetch": "^3.3.2",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.28.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm dlx prettier --config .prettierrc.json --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "micromatch@<4.0.8": ">=4.0.8"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
