{
  "name": "@github-actions-workflow-ts/lib",
  "version": "2.2.0-beta.4",
  "description": "Type-safe GitHub Actions workflow builder - Library",
  "author": "Emmanuel N Kyeyune",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/emmanuelnk/github-actions-workflow-ts",
    "directory": "packages/lib"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:esm && pnpm run build:cjs && pnpm run build:fixcjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:fixcjs": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js --coverage",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
